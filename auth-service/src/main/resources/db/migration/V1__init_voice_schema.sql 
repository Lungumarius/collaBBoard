-- ============================
-- DEMO VOICES (PUBLIC)
-- ============================
CREATE TABLE IF NOT EXISTS voice.demo_voices (
    id            VARCHAR(50) PRIMARY KEY,
    name          VARCHAR(100) NOT NULL,
    description   VARCHAR(255),
    language      VARCHAR(10) NOT NULL,
    model_path    VARCHAR(255) NOT NULL,
    active        BOOLEAN DEFAULT true
);

-- ============================
-- USER VOICES (ADVANCED MODE)
-- ============================
CREATE TABLE IF NOT EXISTS voice.user_voices (
    id            UUID PRIMARY KEY,
    user_id       UUID NOT NULL,
    status        VARCHAR(30) NOT NULL,
    language      VARCHAR(10),
    model_path    VARCHAR(255),
    created_at    TIMESTAMP DEFAULT now()
);

-- ============================
-- TRAINING JOBS
-- ============================
CREATE TABLE IF NOT EXISTS voice.training_jobs (
    id            UUID PRIMARY KEY,
    voice_id      UUID REFERENCES voice.user_voices(id),
    status        VARCHAR(30) NOT NULL,
    external_ref  VARCHAR(255),
    logs          TEXT,
    updated_at    TIMESTAMP DEFAULT now()
);
